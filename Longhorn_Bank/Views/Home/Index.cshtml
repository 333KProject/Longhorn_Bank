
@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm())
{
    <p class="form-group">
    </p>
}

<h1 class="text-center">Welcome to Longhorn Bank!</h1>
<br/>
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Half Slider - Start Bootstrap Template</title>

    <!-- Bootstrap Core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="css/half-slider.css" rel="stylesheet">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <!-- Half Page Image Background Carousel Header -->
    <header id="myCarousel" class="carousel slide">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for Slides -->
        <div class="carousel-inner">
            <div class="item active">
                <!-- Set the first background image using inline CSS below. -->
                <img class="fill" src="https://admissions.utexas.edu/sites/default/files/primary-images/visit-primary.jpg" alt="downtown austin">
                @*<div class="carousel-caption">
                    <h2>Welcome to Longhorn Bank!</h2>
                </div>*@
            </div>
            <div class="item">
                <!-- Set the second background image using inline CSS below. -->
                <img class="fill" src="https://res.cloudinary.com/jumpshell/image/upload/q_70,f_auto,w_700/v1467309583/e0vzvdilxjplpgxjuul3.jpg" alt="downtown austin">
                @*<div class="carousel-caption">
                    <h2>Welcome to Longhorn Bank!</h2>
                </div>*@
            </div>
            <div class="item">
                <!-- Set the third background image using inline CSS below. -->
                <img class="fill" src="https://backcheckgroup.com/wp-content/uploads/2016/01/Banking-1.jpg" alt="downtown austin">
                @*<div class="carousel-caption">
                    <h2>Welcome to Longhorn Bank!</h2>
                </div>*@
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="icon-next"></span>
        </a>

    </header>

    <!-- Page Content -->
    <div class="container">

        <hr>
        <div class="row">
            <div class="col-sm-8">
                <h2>How Can We Help You?</h2>
                <p>Longhorn Bank is an Austin-area banking and investment firm. In the past, customers were forced to visit one of their area locations to apply for accounts, transfer money, or get access to their investment products.</p>
                <p>We aim to offer convenience and efficiency to our customers through our platform that is dedicated to streamlining many of your important financial processes.</p>
                @*<p>
                        <a class="btn btn-default btn-lg" href="#">Call to Action &raquo;</a>
                    </p>*@
            </div>
            <div class="col-sm-4">
                <h2>Contact Us</h2>
                <address>
                    <strong>MIS333K Team 9 </strong>
                    <br>333 McCombs Dr. 
                    <br>Austin, TX 78705
                    <br>
                </address>
                <address>
                    <abbr title="Phone">P:</abbr>(123) 456-7890
                    <br>
                    <abbr title="Email">E:</abbr> <a href="mailto:#">mis333K@example.com</a>
                </address>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Our Services
                </h1>
            </div>
            <div class="col-md-3">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4><i class="fa fa-fw fa-check"></i>Checkings Accounts</h4>
                    </div>
                    <div class="panel-body">
                        <p>Perfect for debit cardholders</p>
                        @Html.ActionLink("Learn More", "Register", "Account")
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4><i class="fa fa-fw fa-gift"></i>Savings Accounts</h4>
                    </div>
                    <div class="panel-body">
                        <p>Open a savings account and make saving money easier and faster</p>
                        @Html.ActionLink("Apply", "Register", "Account")
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4><i class="fa fa-fw fa-compass"></i>IRA</h4>
                    </div>
                    <div class="panel-body">
                        <p>Plan for the perfect retirment through your own IRA account</p>
                        @Html.ActionLink("Apply", "Register", "Account")
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4><i class="fa fa-fw fa-compass"></i>Stock Portfolio</h4>
                    </div>
                    <div class="panel-body">
                        <p>Want to invest? Buy and Sell stocks by building your own Stock Portfolio.</p>
                        @Html.ActionLink("Apply", "Register", "Account")
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->

        <hr>

    </div>


       

    <!-- /.container -->
    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Script to Activate the Carousel -->
    <script>
    $('.carousel').carousel({
        interval: 5000 //changes the speed
    })
    </script>

</body>

</html>