@model IEnumerable<Longhorn_Bank.Models.StockPortfolio>

@{
    ViewBag.Title = "Index";
}

<h2>My Stock Portfolio</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Account Name
        </th>
        <th>
            Account Number
        </th>
        <th>
            Portfolio Balance
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PortfolioCashBalance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StockAccountNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StockPortfolioID }) |
            @Html.ActionLink("Details", "Details", new { id=item.StockPortfolioID }) 
        </td>
    </tr>
}

</table>
